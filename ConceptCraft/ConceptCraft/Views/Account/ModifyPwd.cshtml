@using CRM.GlobalResources;
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Login.ModifyPassword</title>
    @Styles.Render("~/Main/css")
    <link href="~/Content/dev/Account/login.css?v=@ViewBag.BuildVersion" rel="stylesheet">
</head>
<body class="gray-bg">
    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <div class="logo-name">
                    <img src="~/Content/images/shr-logo2.svg"/>
                </div>

            </div>
            <div class="alert alert-danger alert-dismissable" id="ErrorMessageDiv">
                <span id="ErrorMessage">@TempData["ErrorMessage"]</span>
            </div>
            @if (ViewBag.Active)
            {
                <form class="m-t" role="form" method="post">
                    @*<label class="pull-left">Modify Password</label>*@
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="@Login.InitialPassword" required="" name="InitialPassword" id="InitialPassword">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="@Login.NewPassword" required="" RegularExpression="^(?![^a-zA-Z]+$)(?!\D+$).{7,18}$" name="NewPassword" id="NewPassword">
                    </div>
                    <div class="form-group">
                        <input type="password" class="form-control" placeholder="@Login.ConfirmPassword" required="" RegularExpression="^(?![^a-zA-Z]+$)(?!\D+$).{7,18}$" name="ConfirmPassword" id="ConfirmPassword">
                    </div>
                    <button type="submit" class="btn btn-primary block full-width m-b">@Login.Modify</button>
                </form>
            }
            else
            {
                <div class="form-group">
                    <h3>@Login.Passwordhasbeenmodify</h3>
                    <a href="~/Account/Login"><small>@Login.ChangeUser</small></a>
                </div>
            }
        </div>
    </div>
    <div class="middle-box loginscreen animated fadeInDown">
        <div class="form-group" id="InfoMessageDiv">
            <ul>
                <li>@Login.YourPasswordCanNotContainSpaceCharacters</li>
                <li>@Login.YourPasswordMustBeAtLeast7Characters</li>
                <li>@Login.YourPasswordMustContainBothNumericAndAlphaCharacters</li>
            </ul>
        </div>
    </div>

    <input type="hidden" id="hidRequired" value="@Common.Required" />
    <input type="hidden" id="hidInitialPassword" value="@Login.InitialPassword" />
    <input type="hidden" id="hidNewPassword" value="@Login.NewPassword" />
    <input type="hidden" id="hidConfirmPassword" value="@Login.ConfirmPassword" />

    <!-- Mainly scripts -->
    <script src="~/Scripts/jquery-2.1.1.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/dev/Account/modifypwd.js?v=@ViewBag.BuildVersion"></script>
</body>
</html>
